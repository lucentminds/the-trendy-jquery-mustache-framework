{
   "name": "{%= name %}",
   "date": "{%= date %}",
   "description": "{%= description %}",
   "main": "{%= name %}.js",
   "license": "UNLICENSED",
   "version": "0.0.1",
   "engines" : {
      "node" : ">=4.0.0"
   },
   "project":{
      "watch":[
         "./src"
      ],
      "build":[
         {
            "method": "empty",
            "dirs": [
               "./build",
               "./temp"
            ]
         },
         {
            "method": "concat",
            "options":{
               "contentType": "css"
            },
            "input": [
               "./src/{%= name %}.css"
            ],
            "output": [
               {
                  "options": {},
                  "path": "./build/{%= name %}.css"
               }
            ]
         },
         {
            "method": "htmlToJs",
            "options":{
               "varname": "cTemplate"
            },
            "files": [
               "./src/{%= name %}.htm"
            ],
            "output": "./temp/{%= name %}-template.js"
         },
         {
            "method": "concat",
            "options":{
               "contentType": "js",
               "prefix": "(function( $, undefined ){\n",
               "suffix": "\n}( App.$ ));"
            },
            "input": [
               "./temp/{%= name %}-template.js",
               "./src/{%= name %}.js"
            ],
            "output": [
               {
                  "options": {},
                  "path": "./build/{%= name %}.js"
               }
            ]
         }
      ]
   },
   "repository":{
      "type": "git",
      "url": "https://github.com/life-corp/{%= name %}.git"
   },
   "dependencies": {
      "builder-bob": "git+https://github.com/lucentminds/builder-bob.git",
      "promise-empty-dir": "git+https://github.com/lucentminds/promise-empty-dir.git",
      "promise-file-concat": "git+https://github.com/lucentminds/promise-file-concat.git",
      "promise-file-copy": "git+https://github.com/lucentminds/promise-file-copy.git",
      "promise-file-jsify": "git+https://github.com/lucentminds/promise-file-jsify.git",
      "promise-file-write": "git+https://github.com/lucentminds/promise-file-write.git"
   }
}
